
@{
    ViewBag.PageTitle = "index";
}

<h2>Welcome to Your Blog</h2>

@using (Html.BeginForm("Create", "BlogPost"))
{
    <p>
        @Html.TextBox("Title", null, new { @class = "form-control", placeholer = "Title" })
    </p>
    <p>
        @Html.TextBox("Body", null, new { @class = "form-control", placeholder = "Write Text Here" })
    </p>
    <p>
        <input type="submit" class="btn btn-warning" value="Create Blog Post" />
    </p>
}
    @foreach (var blogpost in ViewBag.AllBlogPosts)
    {
        <div class="row">
            <div class="col-md-2">
                @blogpost.Title
            </div>
            <div class="col-md-8">
                @blogpost.Body
            </div>
            <div class="col-md-2">
                @blogpost.Created
            </div>
        </div>
    }
